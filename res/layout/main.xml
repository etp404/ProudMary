<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
							android:orientation="vertical"
							android:layout_width="fill_parent"
							android:layout_height="fill_parent"
				>

		<TextView
						android:layout_width="fill_parent"
						android:layout_height="wrap_content"
						android:text="Recipient"
						android:id="@+id/recipientNumberLabel"/>
		<EditText
						android:layout_width="fill_parent"
						android:layout_height="wrap_content"
                        android:text="07961911570"
                        android:id="@+id/recipientNumber"/>
		<TextView
						android:layout_width="fill_parent"
						android:layout_height="wrap_content"
						android:text="Destination"
						android:id="@+id/destinationTextView"/>
		<EditText
						android:layout_width="fill_parent"
						android:layout_height="wrap_content"
                        android:text=""
                        android:id="@+id/destination"/>
        <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Frequency (minutes)"
                android:id="@+id/frequencyTextView"/>
        <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:id="@+id/frequency"/>
		<Button
						android:id="@+id/start_button"
						android:layout_width="fill_parent"
						android:layout_height="wrap_content"
						android:layout_gravity="center"
						android:text="Start sending updates" />
		<Button
						android:id="@+id/stop_button"
						android:layout_width="fill_parent"
						android:layout_height="wrap_content"
						android:text="Stop sending updates"/>
		<TextView
						android:id="@+id/text"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_gravity="left|center_vertical"/>

</LinearLayout>

